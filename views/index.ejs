<link rel="stylesheet" href="/styles/sidebar.css" type="text/css" />
<link rel="stylesheet" href="/styles/modal.css" type="text/css" />

    <header >
      <span class="header">Restaurant APP</span>
    </header>
  </head>

  <body>
    <div class="restName">
      <h1>Lighthouse Foods</h1>
      The HiVE, 128 W Hastings St #300, Vancouver, BC V6B 1G8
    </div>

    <nav>
      <a class="navEntree">Entree</a>
      <a class="navSnack">Snack</a>
      <a class="navDrink">Drink</a>
    </nav>

<main class="content">
  <section class = "entree">
    <h2>Entrees</h2>
    <table>
      <tr class="foodImgHolder">
        <%foodEntree.forEach(function(foodItem){%>
        <% include ./partials/_foodData %>
        <% }) %>
      </tr>
      <tr class="foodInfoHolder">
          <%foodEntree.forEach(function(foodItem){%>
          <td>
            <%= foodItem.name %><br>
            $<%= (foodItem.price/100).toFixed(2) %>
        </td>
          <% }) %>
        </tr>
    </table>
  </section>

  <section class = "snack">
    <h2>Snacks</h2>
    <table>
      <tr class="foodImgHolder">
          <%foodSnack.forEach(function(foodItem){%>
            <% include ./partials/_foodData %>
          <% }) %>
      </tr>
      <tr class="foodInfoHolder">
          <%foodSnack.forEach(function(foodItem){%>
        <td>
            <%= foodItem.name %><br>
            $<%= (foodItem.price/100).toFixed(2) %>
        </td>
          <% }) %>
        </tr>
    </table>
  </section>

  <section class = "drink">
    <h2>Drinks</h2>
    <table>
      <tr class="foodImgHolder">
          <%foodDrink.forEach(function(foodItem){%>
            <% include ./partials/_foodData %>
          <% }) %>
      </tr>
      <tr class="foodInfoHolder">
          <%foodDrink.forEach(function(foodItem){%>
          <td>
            <%= foodItem.name %><br>
            $<%= (foodItem.price/100).toFixed(2) %>
        </td>
          <% }) %>
        </tr>
    </table>
  </section>
</main>

    <section id="sideBar">
      <div id="checkoutButton">Checkout</div>
      <span class="totalAmount">$0.00</span>
    </section>

<img src="https://placekitten.com/g/200/1000">
  </body>
</html>
